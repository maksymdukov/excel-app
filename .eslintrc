{
  "parser": "@babel/eslint-parser",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "operator-linebreak": "off",
    "indent": "off",
    "max-len": "off",
    "import/prefer-default-export": "off",
    "no-console": "off",
    "comma-dangle": "off",
    "arrow-body-style": "off",
    "class-methods-use-this": "off",
    "max-classes-per-file": "off",
    "no-case-declarations": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-fallthrough": "off",
    "no-shadow": "off",
    "object-curly-newline": "off",
    "no-use-before-define": "off",
    "no-new": "off",
    "consistent-return": "off",
    "func-names": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": { "jest": true }
    }
  ],
  "extends": ["airbnb-base"]
}
